{
  "name": "@dwk/pulletsforever.com",
  "version": "1.0.0",
  "description": "Source for https://pulletsforever.com",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "build": "npx @11ty/eleventy --config=eleventy.config.ts",
    "start": "npx @11ty/eleventy --config=eleventy.config.ts --serve --quiet",
    "test": "npm test --prefix workers/site && npm test --prefix workers/micropub",
    "typecheck": "tsc --noEmit",
    "new-post": "node --experimental-strip-types scripts/new-post.ts",
    "sign:security-txt": "node --experimental-strip-types scripts/sign-security-txt.ts",
    "sign:security-txt:dry": "node --experimental-strip-types scripts/sign-security-txt.ts --dry-run",
    "webmentions:send": "node --experimental-strip-types scripts/send-webmentions.ts",
    "webmentions:send:dry": "node --experimental-strip-types scripts/send-webmentions.ts --dry-run",
    "websub:ping": "node --experimental-strip-types scripts/ping-websub.ts",
    "websub:ping:dry": "node --experimental-strip-types scripts/ping-websub.ts --dry-run",
    "deploy": "npm run build && npm run sign:security-txt && wrangler deploy && npm run websub:ping && npm run webmentions:send",
    "deploy:preview": "npm run build && npm run sign:security-txt:dry && wrangler deploy --dry-run",
    "cf-typegen": "wrangler types"
  },
  "author": {
    "name": "David W. Keith",
    "email": "git@dwk.io",
    "url": "https://dwk.io/"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/dwk-io/pulletsforever.com.git"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "6.0.4",
    "@11ty/eleventy-navigation": "^1.0.5",
    "@11ty/eleventy-plugin-bundle": "3.0.7",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.2",
    "@11ty/eleventy-plugin-webc": "^0.12.0-beta.7",
    "@11ty/webc": "^0.12.0-beta.2",
    "@cloudflare/workers-types": "^4.20260218.0",
    "@jackdbd/eleventy-plugin-content-security-policy": "^2.2.0",
    "@mdit/plugin-footnote": "^0.22.4",
    "@mdit/plugin-mark": "^0.22.2",
    "@mdit/plugin-sup": "^0.23.1",
    "@resvg/resvg-js": "^2.6.2",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/luxon": "^3.7.1",
    "dotenv": "^17.3.1",
    "eleventy-plugin-gen-favicons": "^1.1.3",
    "html-minifier-terser": "^7.2.0",
    "img-comparison-slider": "^8.0.7",
    "jsdom": "^28.1.0",
    "luxon": "^3.7.2",
    "markdown-it-anchor": "9.2.0",
    "openpgp": "^6.3.0",
    "satori": "^0.19.2",
    "satori-html": "^0.3.2",
    "sharp": "0.34.5",
    "typescript": "^5.9.3",
    "wrangler": "^4.66.0"
  },
  "overrides": {
    "sharp": "0.34.5"
  }
}
