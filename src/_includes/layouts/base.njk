<!doctype html>
<html lang="{{ metadata.language }}" prefix="og: https://ogp.me/ns#">
  <head>
    {% include "partials/meta-tags.njk" %}
 
    <title>{{ title or metadata.title }}</title>

    {% include "partials/link-tags.njk" %}

    <script type="application/ld+json">
      {% generateSchema schema %}
    </script>

    {%- css %}
      {% include "css/index.css" %}
      {% include (inputDir + "_css/index.css") %}
    {% endcss %}
    <style>{% getBundle "css" %}</style>
 
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>

    {% include "partials/header.njk" %}

    <main id="main-content">
      {{ content | safe }}
    </main>
 
    {% include "partials/footer.njk" %}
    
    {%- js %}
      {% include "js/index.js" %}
    {% endjs %}
    <script>{% getBundle "js" %}</script>
    <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon="{{ metadata.cloudflare_insights | json }}"></script>
  </body>
</html>
