<footer>
  {% if metadata.showSocialLinks and not hideFooterSocial %}
    <ul class="footer-social" role="list">
    {% for service, profileURL in metadata.author.alternates %}
      {% if service != "blog" %}
      <li><a href="{{ profileURL }}" rel="me external" aria-label="{{ service }}">
        {% renderTemplate "webc", {serviceName: service} %}<social-icon :service="serviceName" size="24"></social-icon>{% endrenderTemplate %}
      </a></li>
      {% endif %}
    {% endfor %}
    <li><a href="mailto:{{ metadata.author.email }}" rel="me" aria-label="email">
      {% renderTemplate "webc" %}<social-icon service="email" size="24"></social-icon>{% endrenderTemplate %}
    </a></li>
    </ul>
  {% endif %}
    <p xmlns:cc="http://creativecommons.org/ns#" xmlns:dct="http://purl.org/dc/terms/">
    <a property="dct:title" rel="cc:attributionURL" href="{{metadata.url}}">{{metadata.title}}</a> by
    <a rel="cc:attributionURL dct:creator author me" property="cc:attributionName" href="{{metadata.author.url}}">{{metadata.author.name}}</a> is licensed under<br>
    <a href="https://creativecommons.org/licenses/by/4.0/?ref=chooser-v1" target="_blank" rel="license noopener noreferrer" style="display:inline-block;">Creative Commons Attribution 4.0 International
      <img height="22" width="22" src="https://mirrors.creativecommons.org/presskit/icons/cc.svg?ref=chooser-v1" alt="Creative Commons logo" eleventy:output="/img/">
      <img height="22" width="22" src="https://mirrors.creativecommons.org/presskit/icons/by.svg?ref=chooser-v1" alt="Attribution Required" eleventy:output="/img/">
    </a>
  </p>
  <img id="greenweb-badge" width="200" height="95" src="https://app.greenweb.org/api/v3/greencheckimage/{{metadata.site}}" alt="This website runs on green hosting - verified by thegreenwebfoundation.org" eleventy:ignore>
</footer>
