
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="color-scheme" content="{{ metadata.colorScheme }}">
<meta name="description" content="{{ schema.description }}">
<meta name="generator" content="{{ eleventy.generator }}">

{% set postImage = content | firstImage %}
{% set socialImage = (title or schema.name) | socialImageUrl(postImage, page.inputPath) %}
{% set ogImage = (metadata.url + socialImage) if socialImage else schema.image %}

<meta property="og:title" content="{{ title or schema.name }}">
<meta property="og:description" content="{{ description or schema.description }}">
<meta property="og:type" content="{{ ogType or metadata.ogType }}">
<meta property="og:image" content="{{ ogImage }}">
<meta property="og:image:alt" content="{{ title or schema.name }}">
<meta property="og:url" content="{{ metadata.url }}{{ page.url }}">

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title or schema.name }}">
<meta name="twitter:description" content="{{ description or schema.description }}">
<meta name="twitter:image" content="{{ ogImage }}">

{% if ogType == "article" %}
<meta property="article:published_time" content="{{ date | dateToRfc3339 }}">
{% if modified %}<meta property="article:modified_time" content="{{ modified | dateToRfc3339 }}">
{% endif %}<meta property="article:author" content="{{ metadata.author.url }}">
{% for tag in tags %}{% if tag != "posts" %}
<meta property="article:tag" content="{{ tag }}">
{% endif %}{% endfor %}
{% endif %}

<meta property="fediverse:creator" content="{{ metadata.author.fediverse }}">