---
eleventyExcludeFromCollections: true
permalink: /feed.xml
---
{% from "macros/article.njk" import article %}
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="{{ metadata.language }}">
	<title>{{ metadata.title }}</title>
	<subtitle>{{ metadata.description }}</subtitle>
	<link href="{{ permalink | absoluteUrl(metadata.url) }}" rel="self" type="application/atom+xml"/>
	<link href="{{ metadata.url }}/" rel="alternate" type="text/html"/>
	<updated>{{ collections.posts | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
	<id>{{ metadata.url }}/</id>
	<author>
		<name>{{ metadata.author.name }}</name>
		<email>{{ metadata.author.email }}</email>
		<uri>{{ metadata.author.url }}</uri>
	</author>
	<icon>{{ metadata.logo.src | absoluteUrl(metadata.url) }}</icon>
	{%- for post in collections.posts | reverse %}
	{%- set absolutePostUrl = post.url | absoluteUrl(metadata.url) %}
	<entry>
		<title>{{ post.data.title }}</title>
		<link href="{{ absolutePostUrl }}" rel="alternate" type="text/html"/>
		<id>{{ absolutePostUrl }}</id>
		<published>{{ post.date | dateToRfc3339 }}</published>
		<updated>{{ (post.data.modified or post.date) | dateToRfc3339 }}</updated>
		{%- for tag in post.data.tags | filterTagList %}
		<category term="{{ tag }}"/>
		{%- endfor %}
		<content type="html">{{ article(post, post.templateContent) | htmlToAbsoluteUrls(absolutePostUrl) }}</content>
	</entry>
	{%- endfor %}
</feed>
